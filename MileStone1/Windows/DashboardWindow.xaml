<Window x:Class="MileStone1.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MileStone1"
        xmlns:ProgressBar="clr-namespace:MileStone1.Controls" d:DataContext="{d:DesignInstance Type=local:SliderControlVM}"
        xmlns:Controls="clr-namespace:MileStone1.Controls"
        xmlns:Graph="clr-namespace:MileStone1.Controls"
        xmlns:Navigator="clr-namespace:MileStone1.Controls"
        xmlns:Data="clr-namespace:MileStone1.Controls"
        mc:Ignorable="d"
        Title="Dashboard" Background="Transparent"  >

    <Border
        Background="#364547" 
        CornerRadius="20">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="120*"/>
                <RowDefinition Height="143*"/>
                <RowDefinition Height="255*"/>
                <RowDefinition Height="50*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <ProgressBar:ProgressBarView x:Name="animationSlide" Grid.RowSpan="1" Grid.Row="3" Grid.ColumnSpan="2" LineToTransmit="{Binding VM_LineToTransmit}" RunAnimation="{Binding VM_RunAnimation}" Margin="0,10,0,0"/>
            <Graph:GraphView x:Name="graph" Grid.RowSpan="2"
                         Grid.Row="1" Grid.Column="1" Margin="0,49,0,49"/>
            <Navigator:NavigatorStateView x:Name="Navigator" Grid.Row="2" Grid.RowSpan="1" />
            <Data:DataInfoView x:Name="DataInfo" Margin="350,0,0,0" Grid.Row="0" VerticalContentAlignment="Bottom" HorizontalAlignment="Stretch" Loaded="DataInfo_Loaded" Grid.ColumnSpan="2" Grid.RowSpan="1" />
            <Button Name ="b1" Content="LineNumber:" Margin="0,0,296,0" Grid.Column="0" Grid.Row="0" VerticalAlignment="Top" Click="Button_Click"/>
        </Grid>
    </Border>
</Window>
