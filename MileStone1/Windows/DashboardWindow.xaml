<Window x:Class="MileStone1.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MileStone1"
        xmlns:ProgressBar="clr-namespace:MileStone1.Controls" d:DataContext="{d:DesignInstance Type=local:SliderControlVM}"
        xmlns:Controls="clr-namespace:MileStone1.Controls"
        xmlns:Graph="clr-namespace:MileStone1.Controls"
        xmlns:Navigator="clr-namespace:MileStone1.Controls"
        xmlns:Data="clr-namespace:MileStone1.Controls"
        mc:Ignorable="d"
        Title="Dashboard" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <ProgressBar:ProgressBarView x:Name="animationSlide" Grid.RowSpan="1" Grid.Row="2" LineToTransmit="{Binding VM_LineToTransmit}" RunAnimation="{Binding VM_RunAnimation}" Margin="0,10,0,0"/>
        <Graph:GraphView x:Name="graph" Grid.RowSpan="2" Margin="0,52,10,-182" HorizontalAlignment="Right" Grid.Row="1"/>
        <Navigator:NavigatorStateView x:Name="Navigator" Grid.RowSpan="2" Margin="0,52,283,32" HorizontalAlignment="Right" Width="691" Grid.Row="1"/>
        <Data:DataInfoView x:Name="DataInfo" Grid.RowSpan="2" Margin="0,0,-213,84" HorizontalAlignment="Right" Width="691" Loaded="DataInfo_Loaded"/>
        <Button Name ="b1" Content="LineNumber:" Margin="0,0,682,0" VerticalAlignment="Top" Height="53" Click="Button_Click"/>
    </Grid>
</Window>
