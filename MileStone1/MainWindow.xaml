<Window x:Class="MileStone1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MileStone1"
        xmlns:Controls="clr-namespace:MileStone1.Controls" xmlns:transmitter="clr-namespace:Transmitter" d:DataContext="{d:DesignInstance Type=local:SliderControlVM}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="12*"/>
        </Grid.RowDefinitions>
        <Controls:ProgressBarView x:Name="animationSlide" Grid.RowSpan="2" LineToTransmit="{Binding VM_LineToTransmit}" RunAnimation="{Binding VM_RunAnimation}"/>
        <Button Name ="b1" Content="LineNumber:" HorizontalAlignment="Left" Margin="304,164,0,0" VerticalAlignment="Top" Height="53" Width="86" Click="Button_Click"/>

    </Grid>
</Window>

    